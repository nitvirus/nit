<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitvirus.android.himachalpradesh.detailedActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_detailed" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:layout_weight="0.18"
                android:elevation="24dp"
                android:gravity="top"
                android:text="Districts"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/districtbrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="@string/district_brief" />

            <GridLayout
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_below="@+id/imageView"
                android:layout_gravity="center"
                android:layout_weight="2.99"
                android:addStatesFromChildren="false"
                android:numColumns="2"
                android:paddingLeft="50dp"
                android:rowCount="6"
                android:visibility="visible">

                <Button
                    android:id="@+id/bilaspur"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"

                    android:text="Bilaspur" />

                <Button
                    android:id="@+id/chamba"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Chamba" />

                <Button
                    android:id="@+id/hamirpur"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="Hamirpur" />

                <Button
                    android:id="@+id/kangra"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:text="Kangra" />

                <Button
                    android:id="@+id/kinnaur"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="Kinnaur" />

                <Button
                    android:id="@+id/kullu"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="Kullu" />

                <Button
                    android:id="@+id/lahaul"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:text="Lahaul and spiti" />

                <Button
                    android:id="@+id/mandi"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:text="Mandi" />

                <Button
                    android:id="@+id/shimla"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:text="Shimla" />

                <Button
                    android:id="@+id/sirmaur"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:text="Sirmaur" />

                <Button
                    android:id="@+id/solan"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:text="Solan" />

                <Button
                    android:id="@+id/una"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="Una" />
            </GridLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="Rivers"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/riversbrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="@string/rivers_brief" />
            <Button
                android:id="@+id/readrivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="Read more about rivers" />
            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="History"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/historybrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="@string/history_brief" />
            <Button
                android:id="@+id/readhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:text="Read more about history" />
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_email" />

</android.support.design.widget.CoordinatorLayout>
